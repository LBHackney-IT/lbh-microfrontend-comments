{
    "extends": "ts-config-single-spa",
    "include": ["src/**/*", "typings/**/*.d.ts"],
    "compilerOptions": {
        "strict": true,
        "jsx": "react",
        "target": "es2016",
        "baseUrl": "src",
        "esModuleInterop": true,
        "paths": {
            "@components": ["components"],
            "@services": ["services"],
            "@utilities": ["utils"]
        }
    }
}
